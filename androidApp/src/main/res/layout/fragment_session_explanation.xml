<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_message"
                style="@style/AppTheme.EmptyScreenText"/>

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:tint="@color/colorOrange"
                android:src="@drawable/ic_thumb_up"
                tools:ignore="ContentDescription" />

            <TextView
                style="@style/AppTheme.EmptyScreenText"
                android:text = "Также мы сгенерировали домашнюю работу согласно выбранному вами сценарию"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/go_to_exercise_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/go_to_decomposition_button"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>
