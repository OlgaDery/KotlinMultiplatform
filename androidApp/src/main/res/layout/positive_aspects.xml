<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        style="@style/AppTheme.HeaderBlue"
        android:text="@string/step_2_looking_for_advantages_header"/>

    <androidx.cardview.widget.CardView
        style="@style/AppTheme.CommonCardView">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@color/colorOrange"
            android:text="@string/looking_for_advantages_rational" />
    </androidx.cardview.widget.CardView>

    <TextView
        style="@style/AppTheme.HeaderWithDrawable"
        android:text="@string/point_1_rational_benefit" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/potential_change1_input_layout"
        style="@style/AppTheme.ScreeningTextInputLayout"
        android:imeOptions="actionNext">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/potential_change1_edit_text"
            style="@style/AppTheme.ScreeningEditText"
            android:drawableStart="@drawable/ic_situation"
            android:hint="@string/your_input"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        style="@style/AppTheme.HeaderWithDrawable"
        android:text="@string/point_2_rational_benefit" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/potential_change2_input_layout"
        style="@style/AppTheme.ScreeningTextInputLayout"
        android:imeOptions="actionNext">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/potential_change2_edit_text"
            style="@style/AppTheme.ScreeningEditText"
            android:drawableStart="@drawable/ic_situation"
            android:hint="@string/your_input" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        style="@style/AppTheme.HeaderWithDrawable"
        android:text="@string/point_3_rational_benefit" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/potential_change3_input_layout"
        style="@style/AppTheme.ScreeningTextInputLayout"
        android:imeOptions="actionNext">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/potential_change3_edit_text"
            style="@style/AppTheme.ScreeningEditText"
            android:drawableStart="@drawable/ic_situation"
            android:hint="@string/your_input" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.cardview.widget.CardView
        style="@style/AppTheme.CommonCardView">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@color/colorOrange"
            android:text="@string/looking_for_advantages_emotional" />
    </androidx.cardview.widget.CardView>

    <TextView
        style="@style/AppTheme.HeaderWithDrawable"
        android:text="@string/point_1_emotional_benefit" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/potential_change1_no_stress_input_layout"
        style="@style/AppTheme.ScreeningTextInputLayout"
        android:imeOptions="actionNext">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/potential_change1_no_stress_edit_text"
            style="@style/AppTheme.ScreeningEditText"
            android:drawableStart="@drawable/ic_situation"
            android:hint="@string/your_input"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        style="@style/AppTheme.HeaderWithDrawable"
        android:text="@string/point_2_emotional_benefit" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/potential_change2_no_stress_input_layout"
        style="@style/AppTheme.ScreeningTextInputLayout"
        android:imeOptions="actionNext">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/potential_change2_no_stress_edit_text"
            style="@style/AppTheme.ScreeningEditText"
            android:drawableStart="@drawable/ic_situation"
            android:hint="@string/your_input" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        style="@style/AppTheme.HeaderWithDrawable"
        android:text="@string/point_3_emotional_benefit" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/potential_change3_no_stress_input_layout"
        style="@style/AppTheme.ScreeningTextInputLayout"
        android:imeOptions="actionDone">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/potential_change3_no_stress_edit_text"
            style="@style/AppTheme.ScreeningEditText"
            android:drawableStart="@drawable/ic_situation"
            android:hint="@string/your_input" />
    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>

